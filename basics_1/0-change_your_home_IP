#!/usr/bin/env bash
# Script to configure /etc/hosts with custom DNS entries

# Backup the original /etc/hosts file
cp /etc/hosts /etc/hosts.bak

# Update /etc/hosts to resolve localhost to 127.0.0.2
# and facebook.com to 8.8.8.8

# Remove existing localhost entry (if it exists)
sed -i '/127.0.0.1\s\+localhost/d' /etc/hosts

# Append the new entries to /etc/hosts
echo "127.0.0.2 localhost" | tee -a /etc/hosts > /dev/null
echo "8.8.8.8 facebook.com" | tee -a /etc/hosts > /dev/null

# Verify the changes
echo "Updated /etc/hosts file:"
cat /etc/hosts
